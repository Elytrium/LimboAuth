<?xml version="1.0" encoding="UTF-8"?>

<FindBugsFilter>
  <!-- I’ll decide myself when I need to make a copy and whenever not -->
  <Match>
    <Bug pattern="MS_EXPOSE_REP,EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
  </Match>

  <!-- I’ll decide myself when I need to add a default case and whenever not -->
  <Match>
    <Bug pattern="SF_SWITCH_NO_DEFAULT"/>
  </Match>

  <!--TODO remove-->
  <Match>
    <Class name="~net.elytrium.limboauth.Settings.*"/>
    <Bug pattern="URF_UNREAD_PUBLIC_OR_PROTECTED_FIELD"/>
  </Match>

  <!--TODO remove-->
  <Match>
    <Bug pattern="DLS_DEAD_LOCAL_STORE"/>
  </Match>

  <!-- Calm down, it's just an auto-generated class -->
  <Match>
    <Class name="net.elytrium.limboauth.BuildConfig"/>
    <Bug pattern="MS_PKGPROTECT,MS_MUTABLE_ARRAY"/>
  </Match>

  <!-- private final String version = BuildConfig.VERSION; -->
  <Match>
    <Class name="net.elytrium.limboauth.Settings"/>
    <Bug pattern="SS_SHOULD_BE_STATIC"/>
  </Match>

  <!-- TODO remove one day -->
  <!-- false positives-->
  <!-- https://github.com/spotbugs/spotbugs/issues/2932 -->
  <!-- https://github.com/spotbugs/spotbugs/pull/2943 -->
  <Match>
    <Class name="net.elytrium.limboauth.data.Database"/>
    <Bug pattern="SING_SINGLETON_IMPLEMENTS_SERIALIZABLE, SING_SINGLETON_GETTER_NOT_SYNCHRONIZED"/>
  </Match>

  <!-- IDK why DefaultDSLContext implements Serializable AT ALL-->
  <Match>
    <Class name="net.elytrium.limboauth.data.Database"/>
    <Bug pattern="SE_BAD_FIELD"/>
  </Match>

  <!-- public static final T[] T_TABLE = {...}; -->
  <Match>
    <Class name="net.elytrium.limboauth.utils.Hex"/>
    <Bug pattern="MS_PKGPROTECT"/>
  </Match>

  <!-- values.length / 2 != values.length / 2.0 -->
  <Match>
    <Class name="net.elytrium.limboauth.utils.Maps"/>
    <Bug pattern="FE_FLOATING_POINT_EQUALITY"/>
  </Match>

  <!-- Well, exception will be thrown anyway, so why should I worry about this? -->
  <Match>
    <Class name="~net.elytrium.limboauth.(serialization.serializers.BossBarSerializer|utils.LibLoader)"/>
    <Bug pattern="NP_NULL_ON_SOME_PATH_FROM_RETURN_VALUE"/>
  </Match>
</FindBugsFilter>
